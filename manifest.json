{
  "manifest_version": 3,
  "name": "CourseWeb LabSheet Tracker",
  "description": "Scrapes labsheet/practical submission events from the CourseWeb calendar and generates downloadable DOCX templates.",
  "version": "1.3.0",
  "icons": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://courseweb.sliit.lk/*"
      ],
      "js": [
        "docx-bundle.js",
        "docx-generator.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "offscreen",
    "downloads",
    "storage"
  ]
}
